{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "TURSO_CONNECTION_URL",
        "TURSO_AUTH_TOKEN"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
